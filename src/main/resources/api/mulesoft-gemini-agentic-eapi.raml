#%RAML 1.0
title: Agentic Commerce Experience API
version: v1
mediaType: application/json
protocols: [ HTTPS ]

/.well-known/ucp:
  get:
    responses:
      200:
        body:
          application/json:

/checkout-sessions:
  post:
    body:
      application/json:
        properties: # Body must define properties or a type
          userId: string
    responses:
      201:
        body:
          application/json:
            example: { "sessionId": "123" } 

  /{id}:
    uriParameters:
      id: string
    get:
      responses:
        200:
          body:
            application/json:
              example: { "id": "123", "status": "active" }
    put:
      body:
        application/json:
        
